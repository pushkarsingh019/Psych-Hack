<%- include('partials/header') %>
<h3>Dashboard</h3>
<a href="/compose">New Entry</a>
<br>
<br>
<form action="/morningPosts" method="post">
    <button type="submit">Morning Posts</button>
</form>
<br>
<form action="eveningPosts" method="post">
    <button type="submit">Evening Posts</button>
</form>
<br>
<form action="/normalPosts" method="post">
    <button type="submit">Free Posts</button>
</form>
<br>
<form action="/questionPosts" method="post">
    <button type="submit">Reflection Posts</button>
</form>
<% posts.forEach(function(post) { %> 
<h3><%= post.title %> </h3>
<p><%= post.content.substring(0,100) + "..." %>
<a href="/posts/<%= post.title %> ">Learn More</a>
</p>

<% }) %> 

